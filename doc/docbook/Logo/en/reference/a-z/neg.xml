<?xml version="1.0" encoding="UTF-8"?>
<article xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
        xml:id="neg">
    <?dbhtml dir="a-z" ?>
  <sect1>
    <title>NEG</title>
    <para>
      Return the value of the argument but with the sign reversed.
    </para>
    <sect2>
      <title>Synopsis</title>
      <funcsynopsis>
        <command>neg</command> <emphasis role="args">&lt;number&gt;</emphasis>
      </funcsynopsis>
    </sect2>
    <sect2>
      <title>Arguments</title>
        <itemizedlist>
            <para><emphasis role="args">&lt;number&gt;</emphasis> - the value to be negated</para>
        </itemizedlist>
    </sect2>
    <sect2>
      <title>Returns</title>
    <para>
      Returns the value of <emphasis role="args">&lt;number&gt;</emphasis> with the sign reversed.
    </para>
    </sect2>
    <sect2>
      <title>Example</title>
      <programlisting>
        make â€œfoo 10
        make "bar neg :foo  ; bar == -10
      </programlisting>
    </sect2>
