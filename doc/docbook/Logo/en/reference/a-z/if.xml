<?xml version="1.0" encoding="UTF-8"?>
<article xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
        xml:id="if">
    <?dbhtml dir="a-z" ?>
  <sect1>
    <title>IF</title>
    <para>
        Execute statements in a block if the given condition evaluates to true.
    </para>
    <sect2>
      <title>Synopsis</title>
      <funcsynopsis>
        <command>if </command> <emphasis role="args">&lt;boolean-exp&gt;</emphasis>
          <command>[</command> <emphasis role="args">&lt;statements&gt;*</emphasis> <command>]</command>
      </funcsynopsis>
    </sect2>
    <sect2>
      <title>Where</title>
        <itemizedlist>
            <para><emphasis role="args">&lt;boolean-exp&gt;</emphasis> - an expression that evaluates to true of false</para>
            <para><emphasis role="args">&lt;statements&gt;</emphasis> - zero or more program statements</para>
        </itemizedlist>
    </sect2>
    <sect2>
      <title>Example</title>
      <programlisting>
          if digitalin 1
          [
              send 'Digital input 1 is on.\n'
          ]
      </programlisting>
    </sect2>
