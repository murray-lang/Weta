<?xml version="1.0" encoding="UTF-8"?>
<article xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
        xml:id="abs">
    <?dbhtml dir="a-z" ?>
  <sect1>
    <title>ABS</title>
    <para>
      Return the absolute value of the argument.
    </para>
    <sect2>
      <title>Synopsis</title>
      <funcsynopsis>
        <command>abs</command> <emphasis role="args">&lt;numeric-exp&gt;</emphasis>
      </funcsynopsis>
    </sect2>
    <sect2>
      <title>Arguments</title>
        <itemizedlist>
            <para><emphasis role="args">&lt;numeric-exp&gt;</emphasis> - must evaluate to a number</para>
        </itemizedlist>
    </sect2>
    <sect2>
      <title>Returns</title>
    <para>
      Returns the absolute value of the argument expression.
    </para>
    </sect2>
    <sect2>
      <title>Example</title>
      <programlisting>
        make “foo -42       ; foo == -42
        make “bar abs :foo  ; bar == 42
      </programlisting>
    </sect2>
    <sect2>
      <title>See Also</title>
        <para>
            <olink targetptr="isinf">isinf</olink>
            <olink targetptr="isnan">isnan</olink>
            <olink targetptr="min">min</olink>
            <olink targetptr="neg">neg</olink>
       </para>
    </sect2>
  </sect1>
</article>
