<?xml version="1.0" encoding="UTF-8"?>
<article xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
        xml:id="off">
    <?dbhtml dir="a-z" ?>
  <sect1>
    <title>OFF</title>
    <para>
      Turn off the selected motors.
    </para>
    <sect2>
      <title>Synopsis</title>
      <funcsynopsis>
        <command>off</command>
      </funcsynopsis>
    </sect2>
    <sect2>
      <title>Arguments</title>
        <itemizedlist>
            <para>Nil</para>
        </itemizedlist>
    </sect2>
    <sect2>
      <title>Returns</title>
    <para>
      Nil.
    </para>
    </sect2>
    <sect2>
      <title>Example</title>
      <programlisting>
              ; Select motors a and b.
              ;These will stay selected until another selection is made
          ab,
          thisway       ; set the direction of both
          setpower 7    ; full power
          on            ; both on
          wait 10       ; wait 1s
          off           ; both off
          rd            ; reverse direction
          on            ; both on
          wait 10       ; wait 1s
          off           ; both off
          brake         ; make sure both stop turning
       </programlisting>
    </sect2>
